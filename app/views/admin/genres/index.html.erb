<h1>ジャンル一覧・追加</h1>

<%= form_with model: @Genre do |f| %>
<div>
<label style="width:150px;">ジャンル名</label>
<span class="mr-5"><%= f.text_field :name %></span>
<span><%= f.submit "新規登録",class:"btn btn-success"%></span>
</div>
<% end %>

<table class="table table-hover table-inverse mt-5" style="width:400px;">
      <thead class="thead-light">
        <tr>
         <th style="width:200px;">ジャンル</th>
         <th></th>
        </tr>
      </thead>
      <tbody>
       <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre),class:"btn btn-success" %></td>
       <% end %>
      </tbody>
    </table>
