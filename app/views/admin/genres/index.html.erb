<h1>ジャンル一覧・追加</h1>

<%= form_with model: @Genre do |f| %>
<div>
<label>ジャンル名</label>
<span><%= f.text_field :name %></span>
<span><%= f.submit "新規登録" %></span>
</div>
<% end %>

<table class="table table-hover table-inverse">
      <thead>
        <tr>
         <th>ジャンル</th>
         <th></th>
        </tr>
      </thead>
      <tbody>
       <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre) %></td>
       <% end %>
      </tbody>
    </table>
