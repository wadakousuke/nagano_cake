<h1>注文履歴詳細</h1>

<table class="table table-hover table-inverse ml-5" style="width:40%;">
      <tbody>
        <tr>
          <td clas=>購入者</td>
          <% cusutomer_name =@order.customer.first_name + @order.customer.last_name %>
          <td> <%=link_to cusutomer_name, admin_customer_path(@order.customer.id)%></td>
        </tr>
         <tr>
          <td>注文日</td>
          <td><%= @order.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
        </tr>
        <tr>
          <td>配送先</td>
          <td><%= @order.delivery_postal_code %></br><%= @order.delivery_postal_address %></br><%= @order.delivery_postal_name %></td>
        </tr>
        <tr>
          <td>支払方法</td>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <td>ステータス</td>
          <td>
             <%= form_with(model: @order, url: admin_order_path, method: :patch, local: true) do |f| %>
              <%= f.select :status,Order.statuses_i18n.keys.map{|k| [I18n.t("enums.order.status.#{k}"), k]} %>
              <%= f.submit "更新",class:"btn btn-success" %>
            <% end %>

         </td>
        </tr>
      </tbody>
</table>
<div class="container" >
 <div class= "row" >
      <div class= "col-9">
        <table class="table ml-5">
          <thead>
            <tr class="table-head" style="background-color:#F5F5F5;">
              <th>商品</th>
              <th>単価（税込）</th>
              <th>個数</th>
              <th>小計</th>
              <th>製作ステータス</th>
            </tr>
          </thead>
         <tbody>
            <% @order_details.each do |order_detail| %>
                <tr>
                  <td><%= Item.find(order_detail.item_id).name %></td>
                  <td><%= Item.find(order_detail.item_id).price*1.1 %></td>
                  <td><%= order_detail.amount %></td>
                  <td><%= order_detail.amount * Item.find(order_detail.item_id).price %></td>
                    <td>
                      <%= form_with(model: OrderDetail, url: admin_order_detail_path, method: :patch, local: true) do |f| %>
                  　　　<%= f.select :making_status,OrderDetail.making_statuses_i18n.keys.map{|k| [I18n.t("enums.order_detail.making_status.#{k}"),k]} %>
                  　　　<%= f.submit "更新",class:"btn btn-success" %>
                　　　　　<% end %>
                　　　</td>
                </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <div class= "col-3">
      <table class="table pl-2">
         <tbody>
           <tr class="table-head" style="background-color:#F5F5F5;">
            <td>商品合計</td>
            <td><%= @sum %></td>
          </tr>
          <tr>
            <td>配送料</td>
            <td><%= @order.shipping_cost %></td>
          </tr>
          <tr>
            <td>ご請求額</td>
            <td class="font-weight-bold"><%= @order.billing_information %></td>
          </tr>
         </tbody>
      </table>
    </div>
  </div>
</div>
