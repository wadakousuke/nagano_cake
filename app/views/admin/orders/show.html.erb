<h1>注文履歴詳細</h1>

<h2>注文情報</h2>
<table class="table table-hover table-inverse">
      <tbody>
        <tr>
          <td>購入者</td>
          <td><%= @order.customer.first_name %><%= @order.customer.last_name %></td>
        </tr>
         <tr>
          <td>注文日</td>
          <td><%= @order.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
        </tr>
        <tr>
          <td>配送先</td>
          <td><%= @order.delivery_postal_code %></br><%= @order.delivery_postal_address %></br><%= @order.delivery_postal_name %></td>
        </tr>
        <tr>
          <td>支払方法</td>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <td>ステータス</td>
          <td>
             <%= form_with(model: @order, url: admin_order_path, method: :patch, local: true) do |f| %>
              <%= f.select :status,Order.statuses.keys %>
              <%= f.submit "更新",class:"btn btn-primary" %>
            <% end %>

         </td>
        </tr>
      </tbody>
</table>

<h2>請求情報</h2>
<table class="table table-hover table-inverse">
      <tbody>
         <tr>
          <td>商品合計</td>
          <td><%= @sum %></td>
        </tr>
        <tr>
          <td>配送料</td>
          <td><%= @order.shipping_cost %></td>
        </tr>
        <tr>
          <td>ご請求額</td>
          <td><%= @order.billing_information %></td>
        </tr>
      </tbody>
</table>

<h2>注文内容</h2>
  <table class="table table-bordered">
          <thead>
            <tr class="table-head" style="background-color:#F5F5F5;">
              <th scope="col">商品</th>
              <th scope="col">単価（税込）</th>
              <th scope="col">個数</th>
              <th scope="col">小計</th>
              <th scope="col">製作ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @order_details.each do |order_detail| %>
                <tr>
                  <td><%= Item.find(order_detail.item_id).name %></td>
                  <td><%= Item.find(order_detail.item_id).price*1.1 %></td>
                  <td><%= order_detail.amount %></td>
                  <td><%= order_detail.amount * Item.find(order_detail.item_id).price %></td>
                  <td>
                  　<%= form_with(model: OrderDetail, url: admin_order_detail_path, method: :patch, local: true) do |f| %>
              　　　　　　<%= f.select :making_status,OrderDetail.making_statuses.keys %>
              　　　　　　<%= f.submit "更新",class:"btn btn-primary" %>
            　　　　　　<% end %>
　　　　　　　　　</td>
                </tr>
            <% end %>
          </tbody>
        </table>
      </div>