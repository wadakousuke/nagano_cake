
<h1><%= @customer.first_name %><%= @customer.last_name %>さんの会員詳細</h1>

<table class="table ml-5" style="width:60%;">
  <tbody>
    <tr>
      <th>会員ID</th>
      <th><%= @customer.id %></th>
    </tr>
    <tr>
      <th>氏名</th>
      <th><%= @customer.first_name %><%= @customer.last_name %></th>
    </tr>
    <tr>
      <th>フリガナ</th>
      <th><%= @customer.first_name_kana %><%= @customer.last_name_kana %></th>
      </tr>
    <tr>
      <th>郵便番号</th>
      <th><%= @customer.postal_code %></th>
    </tr>
    <tr>
      <th>住所</th>
      <th><%= @customer.address %></th>
    </tr>
    <tr>
      <th>電話番号</th>
      <th><%= @customer.telephone_number %></th>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <th><%= @customer.email %></th>
    </tr>
    <tr>
      <th>ステータス</th>
        <% if @customer.is_deleted == false %>
          <th class="text-success font-weight-bold">有効</th>
        <% else %>
          <th class="text-secondary font-weight-bold">退会済み</th>
        <% end %>
    </tr>
  </tbody>
</table>
<div class="d-flex flex-row bd-highlight mb-3 ml-5">
  <div class="ml-5"><%= link_to "編集する", edit_admin_customer_path(@customer.id), class:"btn btn-success"%></div>
  <div class="ml-5"><%= link_to "注文履歴一覧を見る", admin_root_path, class:"btn btn-primary" %></div>
</div>


