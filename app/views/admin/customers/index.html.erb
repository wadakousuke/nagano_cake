<div class="container">
  <div class="row">
    <div class="col-10">
      <h1>会員一覧</h1>
    </div>
  <div class="row">
    <div class="col-lg-12">
       <table class="table table-hover table-inverse mx-auto" style="width:1000px;">
      <thead class="thead-light">
        <tr>
         <th>会員ID</th>
         <th>氏名</th>
         <th>メールアドレス</th>
         <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
       <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <% cusutomer_name = customer.first_name + customer.last_name %>
          <td><%= link_to cusutomer_name, admin_customer_path(customer.id) %></td>
          <td><%= customer.email %></td>
            <% if customer.is_deleted == false %>
              <td class="text-success font-weight-bold">有効</td>
            <% else %>
              <td class="text-secondary font-weight-bold">退会</td>
            <% end %>
        </tr>
       <% end %>
      </tbody>
    </table>
  </div>

