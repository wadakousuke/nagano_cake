<h1>商品一覧</h1>

<% @items.each do |item| %>
  <div><%= image_tag item.item_image %>
    <div><%= link_to item.name, item_path(item.id) %></div>
    <div><%= item.price %></div>
  </div>
<% end %>

<table class="table table-hover table-inverse">
      <thead>
        <tr>
         <th>商品ID</th>
         <th>商品名</th>
         <th>税抜価格</th>
         <th>ジャンル</th>
         <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
       <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= link_to item.name, admin_item_path(item.id) %></td>
          <td><%= item.price %></td>
          <td><%= item.genre.name %></td>
            <% if item.is_active == TRUE%>
              <td>販売中</td>
            <% else %>
              <td>販売停止中</td>
            <% end %>
        </tr>
       <% end %>
      </tbody>
</table>



