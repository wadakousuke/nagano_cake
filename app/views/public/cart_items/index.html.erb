<h1>ショッピングカート</h1>

<table class="table table-hover table-inverse">
      <thead>
        <tr>
         <th>商品名</th>
         <th>単価（税込）</th>
         <th>数量</th>
         <th>小計</th>
         <th></th>
        </tr>
      </thead>
      <tbody>
       <% @cart_items.each do |cart_item| %>
        <tr>
          <td><%= image_tag cart_item.item.item_image %><%= cart_item.item.name %></td>
          <td><%= (cart_item.price * 1.1).floor %></td>
          <td><%= cart_item.item.price %></td>
          <td><%= f.select :amount, *[1..20] %></td>
        　<td><%= (cart_item.price * 1.1).floor * cart_item.amount %></td>
       <% end %>
      </tbody>
</table>


