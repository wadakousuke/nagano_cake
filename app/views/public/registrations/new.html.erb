<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

　<div>
    <%= f.label :"名前                  " %>
    <span><%= f.text_field :first_name %></span>
    <%= f.text_field :last_name %>
  </div>
  <div>
    <%= f.label :"フリガナ              " %>
    <%= f.text_field :first_name_kana %>
    <%= f.text_field :last_name_kana %>
  </div>

  <div>
    <%= f.label :"メールアドレス          " %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <div>
    <%= f.label :"郵便番号（ハイフンなし）" %>
    <%= f.text_field :postal_code %>
  </div>
  <div>
    <%= f.label :"住所                    " %>
    <%= f.text_field :address %>
  </div>
    <div>
    <%= f.label :"電話番号（ハイフンなし）" %>
    <%= f.text_field :telephone_number %>
  </div>


  <div class="field">
    <%= f.label :"パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード（確認用）" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<h2>既に登録済みの方</h2>
<div><span><%= link_to "こちら" , new_customer_session_path %></span>からログインしてください</div>

