<div class="ccontainer">
  <div class="row ml-5 mt-5">
    <h1>会員情報登録</h1>
  </div>
  <div class="row">
    <%= form_for(resource, as: resource_name, url: customer_registration_path, method: :post) do |f| %>
    <table class="table ml-5" style="width:100%;">
      <tbody>
        <tr>
          <th >氏名</th>
          <th >(性)</th>
          <th><%= f.text_field :first_name,placeholder:"令和" %></th>
          <th>(名)</th>
          <th><%= f.text_field :last_name,placeholder:"道子"  %></th>
        </tr>
        <tr>
          <th>フリガナ</th>
          <th >(セイ)</th>
          <th><%= f.text_field :first_name_kana,placeholder:"レイワ"  %></th>
          <th >(メイ)</th>
          <th><%= f.text_field :last_name_kana,placeholder:"ミチコ"  %></th>
        </tr>
        <tr>
          <th>メールアドレス</th>
         <th ></th>
          <th><%= f.text_field :email,style:"width:400px;",placeholder:"sample@example.co.jp"  %></th>

        </tr>
        <tr>
          <th>電話番号(ハイフンなし)</th>
          <th ></th>
          <th class="ml-3"><%= f.text_field :telephone_number,placeholder:"0000000"  %></th>
        </tr>
        <tr>
          <th>郵便番号(ハイフンなし)</th>
          <th ></th>
          <th><%= f.text_field :postal_code,placeholder:"0000000"  %></th>
        </tr>
        <tr>
          <th>住所</th>
          <th ></th>
          <th><%= f.text_field :address,style:"width:400px;",placeholder:"東京渋谷区代々木神園町0-0"  %></th>
        </tr>
        <tr>
          <th><%= f.label :パスワード（6文字以上） %></th>
          <th ></th>
          <th><%= f.password_field :password, autocomplete: "new-password", class: "password" %></th>
        </tr>
        <tr>
          <th><%= f.label :パスワード（確認用） %></th>
          <th ></th>
          <th><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "password_confirm" %></th>
        </tr>
      </tbody>
    </table>
  </div>

    <div class="row ml-5">
      <%= f.submit "新規登録",class: "btn btn-success" %>
    </div>
    <% end %>
    <div class="row ml-5 mt-3">
     <h2>既に登録済みの方</h2>
    </div>
    <div class="row ml-5 mt-3">
     <%= link_to "こちら", new_customer_session_path %>
     <span> からログインしてください。</span>
     <p id="notice"><%= notice %></p>
    </div>

</div>

