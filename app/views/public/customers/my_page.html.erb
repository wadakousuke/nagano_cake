<div class="container">
  <div class="row">
    <div class="col-3">
      <h1>マイページ</h1>
    </div>
  </div>
  <div class="row mt-3">
      <h2>登録情報</h2><span><%= link_to "編集する", edit_customer_path(current_customer.id), class:"btn btn-success ml-5"%></span>
  </div>
  <div class="row mt-3">
    <table class="table border">
      <tbody>
        <tr>
          <th>氏名</th>
          <th><%= current_customer.first_name %><%= current_customer.last_name %></th>
        </tr>
        <tr>
          <th>フリガナ</th>
          <th><%= current_customer.first_name_kana %><%= current_customer.last_name_kana %></th>
          </tr>
        <tr>
          <th>郵便番号</th>
          <th><%= current_customer.postal_code %></th>
        </tr>
        <tr>
          <th>住所</th>
          <th><%= current_customer.address %></th>
        </tr>
        <tr>
          <th>電話番号</th>
          <th><%= current_customer.telephone_number %></th>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <th><%= current_customer.email %></th>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="row mt-3">
    <div class="font-weight-bold" style="width:100px;">配送先</div>
    <div><%= link_to "一覧を見る", addresses_path, class:"btn btn-primary ml-5"%></div>
  </div>
  <div class="row mt-3">
    <div class="font-weight-bold" style="width:100px;">注文履歴</div>
    <div><%= link_to "一覧を見る", orders_path, class:"btn btn-primary ml-5" %></div>
  </div>

</div>

