<h1>マイページ</h1>
<h2>登録情報</h2><span><%= link_to "編集する", edit_customer_path(current_customer.id) %></span>
<table class="table">
  <tbody>
    <tr>
      <th>氏名</th>
      <th><%= current_customer.first_name %><%= current_customer.last_name %></th>
    </tr>
    <tr>
      <th>フリガナ</th>
      <th><%= current_customer.first_name_kana %><%= current_customer.last_name_kana %></th>
      </tr>
    <tr>
      <th>郵便番号</th>
      <th><%= current_customer.postal_code %></th>
    </tr>
    <tr>
      <th>住所</th>
      <th><%= current_customer.address %></th>
    </tr>
    <tr>
      <th>電話番号</th>
      <th><%= current_customer.telephone_number %></th>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <th><%= current_customer.email %></th>
    </tr>
  </tbody>
</table>
<%= link_to "配送先", addresses_path %>
<%= link_to "注文履歴一覧を見る", orders_path %>

