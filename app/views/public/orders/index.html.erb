<h1>注文履歴一覧</h1>

<table class="table table-hover table-inverse">
      <thead>
        <tr>
         <th>注文日</th>
         <th>配送先</th>
         <th>注文商品</th>
         <th>支払金額</th>
         <th>ステータス</th>
         <th>注文詳細</th>
        </tr>
      </thead>
      <tbody>
       <% @orders.each do |orders| %>
        <tr>
          <td><%= orders.created_at %></td>
          <td><%= orders.delivery_postal_code %></br><%= orders.delivery_postal_address %></br><%= orders.delivery_postal_name %></td>
          <td><%= orders.id %></td>
          <td><%= orders.billing_information %></td>
          <td><%= orders.status %></td>
          <td><%= link_to "表示する",  order_path(orders.id) %></td>
        </tr>
       <% end %>
      </tbody>
</table>
