<div class="container">
 <div class="row">
    <div class="col-lg-5">
      <h1>注文履歴一覧</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <table class="table table-hover table-inverse table-bordered">
        <thead>
            <tr>
             <th>注文日</th>
             <th>配送先</th>
             <th>注文商品</th>
             <th>支払金額</th>
             <th>ステータス</th>
             <th>注文詳細</th>
            </tr>
        </thead>
         <% @orders.each do |orders| %>
        <tr>
          <td><%= orders.created_at.strftime('%Y/%m/%d') %></td>
          <td><%= orders.delivery_postal_code %></br><%= orders.delivery_postal_address %></br><%= orders.delivery_postal_name %></td>
          <td>
            <% orders.order_details.each do |p| %>
              <p><%= Item.find(p.item_id).name %></p>
            <%end %>
          </td>
          <td><%= orders.billing_information %></td>
          <td><%= orders.status_i18n %></td>
          <td><%= link_to "表示する",  order_path(orders.id),class:"btn btn-primary" %></td>
        </tr>
       <% end %>
      </tbody>
     </table>
  </div>
</div>


