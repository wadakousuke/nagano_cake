<div class="container">
  <div class="row">
    <div class="col-4">
       <h1>注文情報入力</h1>
    </div>
  </div>
  <div class="row">
    <h2>支払方法</h2>
  </div>
  <div class="row">
    <%= form_with model: Order, url: confirm_path, method: :post do |f| %>
    <div class="ml-4">
      <%= f.radio_button :payment_method, Order.payment_methods.key(0), checked: true %>
      <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
    </div>
    <div class="ml-4">
      <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
      <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>
    </div>
  </div>
  <div class="row">
    <h2>お届け先</h2>
  </div>
  <div class-"row">
    <div class="ml-2">
      <%= radio_button_tag("select_address" ,"0" , checked: true) %>
      <%= f.label :select_address, "ご自身の住所" %>
      <div class="ml-3"><%= current_customer.address %></div>
    </div>
  </div>
  <div class="row">
   <div class="ml-4">
      <%= radio_button_tag("select_address" ,"1" )%>
      <%= f.label :select_address, "登録済み住所から選択" %>
     <div class="ml-4"> <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display),style:"width:400px;"%></div>
    </div>
  </div>
  <div class="row">
     <div class="ml-4">
          <%= radio_button_tag("select_address" ,"2" )%>
          <%= f.label :select_address, "新しいお届け先"%>
          <table class="table table-hover table-inverse table-borderless">
              <tr>
                <td>郵便番号（ハイフンなし）</td>
                <td><%= f.text_field :delivery_postal_code,style:"width:200px;", placeholder:"0000000" %></td>
              </tr>
              <tr>
                <td>住所</td>
                <td><%= f.text_field :delivery_postal_address,style:"width:400px;", placeholder:"東京都渋谷区代々木神園０－０" %></td>
              </tr>
              <tr>
                <td>宛先</td>
                <td><%= f.text_field :delivery_postal_name,style:"width:200px;", placeholder:"令和道子" %></td>
              </tr>
            </tbody>
          </table>
        </div>
  </div>
  <div class="row">
    <%= f.submit  "確認画面へ進む", class:"btn btn-primary mx-auto"%>
    <% end %>
  </div>
</div>


