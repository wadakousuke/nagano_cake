<h1>注文情報入力</h1>
<h2>支払方法</h2>
<%= form_with model: @order, url: confirm_path, method: :post do |f| %>
  <div>
    <%= f.radio_button :payment_method, Order.payment_methods.key(0), checked: true %>
    <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
  </div>
  <div>
    <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
    <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>
  </div>

  <h2>お届け先</h2>
    <div>
      <%= radio_button_tag("select_address" ,"0" , checked: true) %>
      <%= f.label :select_address, "ご自身の住所" %>
      <div><%= current_customer.address %></div>
    </div>
    <div>
      <%= radio_button_tag("select_address" ,"1" )%>
      <%= f.label :select_address, "登録済み住所から選択" %>
      <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %>
    </div>
    <div>
      <%= radio_button_tag("select_address" ,"2" )%>
      <%= f.label :select_address, "新しいお届け先" %>
      <table class="table table-hover table-inverse">
          <tr>
            <td>郵便番号（ハイフンなし）</td>
            <td><%= f.text_field :delivery_postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= f.text_field :delivery_postal_address %></td>
          </tr>
          <tr>
            <td>宛先</td>
            <td><%= f.text_field :delivery_postal_name %></td>
          </tr>
        </tbody>
      </table>
    </div>




<%= f.submit  "注文を確定する"%>
<% end %>

