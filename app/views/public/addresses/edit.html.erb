<div class="container">
  <div class="row mt-5">
    <div class="col-lg-4">
      <h1>配送先編集</h1>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-lg-10">
       <table class="table table-hover table-inverse table-borderless">
          <%= form_with model: @address, url: address_path, method: :patch do |f| %>
        <tr>
          <td>郵便番号（ハイフンなし）</td>
          <td><%= f.text_field :postal_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= f.text_field :address,style:"width:400px;" %></td>
        </tr>
        <tr>
          <td>宛先</td>
          <td><%= f.text_field :name %></td>
          <td> <%= f.submit "変更内容を保存", class:"btn btn-success"%> </td>
        </tr>
      </tbody>
      <% end %>
     </table>
    </div>
  </div>
</div>

