<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <script src="https://kit.fontawesome.com/75441841a3.js" crossorigin="anonymous"></script>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>



   <body class="d-flex flex-column vh-100">
     <header class="shadow-sm" >
       <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
        <h1><%= link_to "ながのCAKE" , root_path %></h1>
         <ul class="navbar-nav ml-auto">
          <% if admin_signed_in? %>
           <li class="nav-item">
             <%= link_to "商品一覧" , admin_items_path, class: "btn btn-light border mr-3" %>
           </li>
           <li class="nav-item">
             <%= link_to "会員一覧" , admin_customers_path, class: "btn btn-light border mr-3" %>
           </li>
           <li class="nav-item">
             <%= link_to "注文履歴一覧" , admin_root_path, class: "btn btn-light border mr-3"  %>
           </li>
           <li class="nav-item">
             <%= link_to "ジャンル一覧" , admin_genres_path, class: "btn btn-light border mr-3"  %>
           </li>
           <li class="nav-item">
             <%= link_to "ログアウト" , destroy_admin_session_path, method: :delete, class: "btn btn-light border"%>
           </li>
          <% else %>
          <% if customer_signed_in? %>
           <li class="nav-item">
             <%= link_to "マイページ" , my_page_path, class: "btn btn-light border mr-3"  %>
           </li>
           <li class="nav-item">
             <%= link_to "商品一覧" , items_path, class: "btn btn-light border mr-3"  %>
           </li>
           <li class="nav-item">
             <%= link_to "カート" , cart_items_path, class: "btn btn-light border mr-3"  %>
           </li>
           <li class="nav-item">
             <%= link_to "ログアウト" , destroy_customer_session_path, method: :delete, class: "btn btn-light border mr-3"   %>
           </li>
          <% else %>
           <li class="nav-item">
             <%= link_to "About" , about_path, class: "btn btn-light border mr-3"   %>
           </li>
           <li class="nav-item">
             <%= link_to "商品一覧" , items_path, class: "btn btn-light border mr-3"  %>
           </li>
           <li class="nav-item">
             <%= link_to "新規登録" , new_customer_registration_path, class: "btn btn-light border mr-3"  %>
           </li>
           <li class="nav-item">
             <%= link_to "ログイン" , new_customer_session_path, class: "btn btn-light border mr-3"   %>
           </li>
           <li class="nav-item">
             <%= link_to "管理者ログイン" , new_admin_session_path, class: "btn btn-light border mr-3"  %>
           </li>
          <% end %>
          <% end %>
         </ul>
      </div>
     </nav>
    </header>


    <main >
      <%= yield %>
    </main>

  <footer>
    <div class="container mt-5 fixed-bottom ">
      <div class="row">
      </div>
    </div>
  </footer>
</html>
